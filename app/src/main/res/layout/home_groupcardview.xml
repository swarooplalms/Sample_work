<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/border"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:id="@+id/reltive"
    tools:context="harico.onammaveliapp.Onapattu_details">
        <RelativeLayout
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            android:id="@+id/card_relative"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone name"
                android:textSize="15sp"
                android:id="@+id/item_name"
                android:gravity="center"
                android:layout_marginLeft="20dp"

                android:textColor="#008080">

            </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_name"
                    android:background="@drawable/divider"
                    ></LinearLayout>
                />

        </RelativeLayout>
        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/item_image"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="80dp"
            android:layout_below="@+id/card_relative"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_relative_below"
            android:layout_below="@+id/thumbnail"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginTop="280dp"
            >
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:background="@drawable/pricebox"
                android:layout_weight="4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="14sp"
                android:id="@+id/item_price"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/offer_price"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:textColor="#f7941e"
                android:layout_marginTop="5dp"

              />


            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="2"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
            android:id="@+id/group_count"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:background="@drawable/icon"/>

            </LinearLayout>

        </LinearLayout>


</RelativeLayout>




